---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>https://thomas-serre.com/</loc>
    <lastmod>{{ site.time | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
    <lastmod>{{ post.date | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}
  
  {% for page in site.pages %}
    {% unless page.url contains '/_posts/' or page.url contains '/_site/' or page.url == '/404.html' or page.url == '/sitemap.xml' or page.url == '/robots.txt' or page.layout == null %}
    <url>
      <loc>{{ site.url }}{{ page.url }}</loc>
      <lastmod>{{ page.date | default: site.time | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
    </url>
    {% endunless %}
  {% endfor %}
</urlset>
